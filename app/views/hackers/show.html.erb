<%= link_to 'Edit', edit_hacker_path(@hacker) %> |
<%= link_to 'Back', hackers_path %>

<div id="content">
	<div id="data">
		<p id="notice">
			<%= notice %>
		</p>
		<%= image_tag(@hacker.avatar, :width => 150) if @hacker.avatar.present? %>
		<h1><%= @hacker.name %> <%= @hacker.nickname %> <%= @hacker.surname %></h1>
		<p>
			<%= @hacker.bio %>
		</p>
		<h3>Tags:</h3>
		<ul class="inlineList">
			<li>
				<a href="">fun</a>
			</li>
			<li>
				<a href="">CSS3</a>
			</li>
			<li>
				<a href="">HTML5</a>
			</li>
		</ul>
		<br />
		<h3>Contact:</h3>
		<ul class="inlineList">
			<li>
				<%= @hacker.email %>
			</li>
			<li>
				<a href="">facebook</a>
			</li>
			<li>
				<a href="">twitter</a>
			</li>
		</ul>
	</div>

	<aside>
		<h2>Projects:</h2>
		<div id="projects">
			<ul>
				<% @hacker.projects.each do |project| %>
				<li>
					<%= link_to project.name, project %>
				</li>
				<% end %>
			</ul>
		</div>
	</aside>
</div>